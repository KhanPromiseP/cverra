  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, weekStartDate])
  @@index([userId])
  @@index([weekStartDate])
  @@index([isRead])
  @@map("assistant_weekly_summaries")
}

// 6️⃣ SECOND BRAIN
enum BrainItemType {
  THOUGHT
  IDEA
  NOTE
  TODO
  PROJECT
  QUESTION
  INSIGHT
  REFERENCE
}

enum BrainItemStatus {
  ACTIVE
  ARCHIVED
  COMPLETED
  DEFERRED
}

model AssistantBrainItem {
  id     String @id @default(cuid())
  userId String

  // Core content
  type    BrainItemType
  content String        @db.Text
  title   String? // Auto-generated for ideas/projects

  // Organization
  status   BrainItemStatus @default(ACTIVE)
  parentId String? // For hierarchy
  tags     String[]        @default([])

  // Automatic categorization
  category   String? // Auto-detected: "career", "learning", etc.
  confidence Float   @default(0.8) // AI confidence in categorization

  // Linking
  linkedItems    String[] // IDs of related brain items
  linkedGoals    String[] // Goal IDs
  linkedArticles String[] // Article IDs

  // For projects
  projectPhase String? // "ideation", "planning", "execution"
  milestones   Json? // For project tracking

  // Priority
  priority  Int     @default(3) // 1-5
  isStarred Boolean @default(false)

  // Timestamps
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  completedAt DateTime?
  dueDate     DateTime?

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([type])
  @@index([status])
  @@index([category])
  @@index([priority])
  @@map("assistant_brain_items")
}

// 7️⃣ FUTURE SIMULATION
model AssistantPathSimulation {
  id     String @id @default(cuid())
  userId String

  // Simulation parameters
  path       String // e.g., "Learn React for 6 months"
  duration   Int // months
  confidence Float  @default(0.7)

  // Results
  skillProjections    Json // Projected skills with levels
  marketOpportunities Json // Job market analysis
  risks               Json // Identified risks
  tradeoffs           Json // Tradeoffs compared to alternatives

  // Alternatives compared
  alternatives Json // Other paths analyzed

  // User interaction
  wasViewed Boolean   @default(false)
  viewedAt  DateTime?
  feedback  String? // User feedback on accuracy

  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
  @@map("assistant_path_simulations")
}

// Audit Log model for SUPER_ADMIN tracking
model AuditLog {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id])
  action       String // e.g., "USER_CREATED", "ARTICLE_DELETED"
  resourceType String // e.g., "USER", "ARTICLE", "CATEGORY"
  resourceId   String?
  details      Json? // Additional details as JSON
  ipAddress    String?
  userAgent    String?
  severity     String   @default("INFO") // "INFO", "WARNING", "ERROR", "CRITICAL"
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([userId])
  @@index([action])
  @@index([resourceType])
  @@index([createdAt])
  @@index([severity])
}
