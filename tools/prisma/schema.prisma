model SubscriptionPlan {
  id          String       @id @default(cuid())
  name        String
  description String?
  price       Decimal
  coins       Int
  interval    PlanInterval // Change from String to PlanInterval
  features    Json?
  isActive    Boolean      @default(true)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

